<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_home_drawer_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitvities.AdminHomeActivity">

    <include
        layout="@layout/nav_appbar_home_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/admin_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/admin_drawer_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/admin_nav_header_home"
        android:background="@drawable/side_nav_bar"
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="@android:color/white"/>

</android.support.v4.widget.DrawerLayout>