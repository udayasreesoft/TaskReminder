<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <RelativeLayout
            android:id="@+id/notify_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/notify_big_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="6dp"/>

        <ImageView
                android:id="@+id/notify_small_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@id/notify_big_icon"
                android:layout_alignEnd="@id/notify_big_icon"
                android:layout_alignRight="@id/notify_big_icon"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/notify_notification_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/notify_icon_container"
            android:layout_toEndOf="@+id/notify_icon_container"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingStart="6dp">

        <TextView
                android:id="@+id/notify_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Title"/>

        <TextView
                android:id="@+id/notify_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Compat.Notification"/>

        <TextView
                android:id="@+id/notify_content_big_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.Compat.Notification"/>
    </LinearLayout>

    <TextView
            android:id="@+id/notify_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Time"/>
</RelativeLayout>